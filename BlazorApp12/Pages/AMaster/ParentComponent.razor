<div>
    <h4>Parent Component</h4>
    <p>Property: @ParentProperty</p>
    <ChildComponent Property="ParentProperty" OnValueChanged="ChildValueChanged" />
</div>

@code {
    [Parameter]
    public string Property { get; set; }

    [Parameter]
    public EventCallback<string> OnValueChanged { get; set; }

    private string ParentProperty => Property;

    private async Task ChildValueChanged(string value)
    {
        await OnValueChanged.InvokeAsync(value);
    }
}
